{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "target": "es2019",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": ["./node_modules"],
  "include": ["src"]
}
